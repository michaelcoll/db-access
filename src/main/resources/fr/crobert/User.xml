<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fr.crobert.mapper.UserMapper">
    <select id="getByEmail" resultType="fr.crobert.domain.User">
        select * from `user` where email = #{email}
    </select>
</mapper>